<Window x:Class="Vulcan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vulcan"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Vulcan YouTube Downloader" Height="480" Width="800"
        Icon="assets/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Background="#2C3E50">
            <TextBlock Text="YouTube Downloader" FontSize="30" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Segoe UI" Margin="241,20,0,0"/>
        </Grid>

        <!-- Content -->
        <Grid VerticalAlignment="Center" Height="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <ui:TextBox Name="UrlTextBox" PlaceholderText="Type video URL..." Grid.Column="1" Margin="165,73,-318,0" Height="64" VerticalAlignment="Top" />
            <ui:Button Name="DownloadButton" Appearance="Primary" Content="Download" Icon="Fluent24" Grid.Column="1" Margin="313,133,-133,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" />
            <ui:Image Name ="ThumbnailImage" CornerRadius="4" BorderBrush="#33000000" Height="283" Grid.Column="1" Margin="0,137,4,0" VerticalAlignment="Top" />
            <TextBlock Name="DownloadedVideoName" Grid.Column="1" Margin="318,191,-553,0" VerticalAlignment="Top" Height="25" />
            <TextBlock Name="VideoDuration" Grid.Column="1" Margin="318,221,-553,0" VerticalAlignment="Top" Height="26" />
            <TextBlock Name="VideoDescription" Grid.Column="1" Margin="318,247,-553,0" VerticalAlignment="Top" Height="112" />
        </Grid>
    </Grid>
</Window>
